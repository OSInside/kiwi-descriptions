        <type image="kis" filesystem="xfs" kernelcmdline="console=ttyS0,115200n8 console=tty0 ip=dhcp root=nfs4:X.X.X.X:/path/to/rootfs rd.debug=0 rd.shell=1 log_buf_len=1M rw"/>
